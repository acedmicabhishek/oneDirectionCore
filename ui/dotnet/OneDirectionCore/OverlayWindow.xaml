<Window x:Class="OneDirectionCore.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="oneDirectionCore Overlay" Height="1080" Width="1920"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" IsHitTestVisible="False">
    
    <!-- Root Canvas so Canvas.SetLeft/SetTop works on RadarCanvas -->
    <Canvas x:Name="RootCanvas">
        <Canvas x:Name="RadarCanvas"/>
    </Canvas>
</Window>
